<div class="banner-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.img_url %>);">
  <div class="container">
    <h1><%= @cocktail.name.upcase %></h1>
  </div>
</div>
<nav class="navbar">
    <%= link_to root_path do %>
    <%= image_tag "https://i.ya-webdesign.com/images/cocktails-clipart-cosmo-drink-4.png", :class => "d-inline-block align-top", :width => "30", :height => "30"%><span class="sec counter counter-lg"><i class="fas fa-undo"></i></span>
  <% end %>
    <%= link_to new_cocktail_path do %>
    <%= image_tag "https://i.ya-webdesign.com/images/cocktails-clipart-cosmo-drink-4.png", :class => "d-inline-block align-top", :width => "30", :height => "30"%><span class="sec counter counter-lg">+</span>
  <% end %>
</nav>

<div class="container">



  <h4>Ingredients</h4>
  <ul>
    <% @cocktail.doses.each do |dose|%>
    <li><%= dose.description %> - <%= dose.ingredient[:name].downcase %> <%= link_to "❌", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
  <p><%= link_to "Back to list", root_path %> | <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>
</div>




<div class="wrapper">
    <ul class="icon-list js-icon-list">
      <li class="js-icon-item" data-name="octicon-alert">

      </li>
    </ul>
</div>
