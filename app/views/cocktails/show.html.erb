<div class="banner-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.img_url %>);">
  <div class="container">
    <h1><%= @cocktail.name.upcase %></h1>
  </div>
</div>
<nav class="navbar navbar-light bg-light">
      <a class="navbar-brand pl-2">
        <%= image_tag "https://image.flaticon.com/icons/png/512/38/38706.png", :class => "d-inline-block align-top", :width => "30", :height => "30"%>
      </a>
      <a class="navbar-brand pr-2"><%= link_to new_cocktail_path do %>
        <%= image_tag "https://image.flaticon.com/icons/png/512/38/38706.png", :class => "d-inline-block align-top", :width => "30", :height => "30"%><span class="sec counter counter-lg">+</span>
      <% end %>
      </a>
    </nav>

<div class="container">



  <h4>Ingredients</h4>
  <ul>
    <% @cocktail.doses.each do |dose|%>
    <li><%= dose.description %> - <%= dose.ingredient[:name].downcase %> <%= link_to "❌", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
  <p><%= link_to "Back to list", root_path %> | <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>
</div>



<% @cocktail.doses.each do |dose|%>
<div class="square">
  <%= dose.description %> - <%= dose.ingredient[:name].downcase %>
</div>
<% end %>

</div>
